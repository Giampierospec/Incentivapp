@{ 
    string method = ViewBag.Method;
}
@model Incentivapp.Models.Rango
<div class="row text-center">
    <div class="col-sm-8 offset-sm-2">
        <h2>@ViewBag.Msg</h2>
        <hr />
        @Html.ValidationSummary()
        @using (Html.BeginForm(method, "Rango", FormMethod.Post))
    {
        if (Model != null)
        {
            @Html.HiddenFor(x => x.idRango);
    }
    <div class="form-group row">
        @Html.LabelFor(x => x.Inicio, "Inicio", new { @class = "col-sm-4 col-form-label" })
        <div class="col-sm-8">
            @Html.TextBoxFor(x => x.Inicio, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Inicio)
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.Fin, "Fin", new { @class = "col-sm-4 col-form-label" })
        <div class="col-sm-8">
            @Html.TextBoxFor(x => x.Fin, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Fin)
        </div>
    </div>
    <div class="col-sm-8 offset-sm-2">
        <button type="submit" class="btn btn-outline-primary">@ViewBag.Btn</button>
    </div>
}
    </div>
</div>



