@using System.Web.Optimization
<!DOCTYPE html>
@{ 
    var user = Incentivapp.Utils.UserUtil.IsLogged((Incentivapp.Models.Usuario)Session["User"])? Incentivapp.Utils.UserUtil.GetUsuario((Incentivapp.Models.Usuario)Session["User"]).nombre :"Ningunos";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    @Styles.Render("~/bundles/css")
    <title>@ViewBag.Title - IncentivApp</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
        <a class="navbar-brand" href="/">Incentivapp</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">@Html.ActionLink("Tipo de Premios", "Index", "TipoPremios", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Premios", "Index", "Premios", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Rango", "Index", "Rango", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Medicion", "Index", "Medicion", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Roles", "Index", "Roles", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Usuarios", "Index", "Usuarios", null, new { @class = "nav-link" })</li>
            </ul>
        </div>
    </nav>
    <div class="container-fluid sep-from-top">
        @RenderBody()
        <footer class="fixed-bottom sep-from-top bg-primary text-center">
            <p class="white-color-inside"> Usuario: @user - Incentivapp - @DateTime.Now.Year</p>
        </footer>
    </div>'
    @Scripts.Render("~/bundles/js")
    <script src="https://cdn.jsdelivr.net/npm/vue@2.5.17/dist/vue.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
