@model List<Incentivapp.Models.Usuario>
@{
    ViewBag.Title = "Usuarios";
}
@section scripts {
    <script src="~/Scripts/Usuarios/usuarios.js"></script>
}
<div class="row">
    <div class="col-sm-8 offset-sm-2 text-center">
        <h2>Usuarios</h2>
        <p>
            @Html.ActionLink("Crear Nuevo", "Create", null, new { @class = "btn btn-primary" })
        </p>
        <table class="table">
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Apellido
                </th>
                <th>
                    Email
                </th>
               <th>
                   Rol
               </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.nombre
                    </td>
                    <td>
                    @item.apellido
                    </td>
                    <td>
                        @item.email
                    </td>
                    <td>
                    @item.Role.nombre
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", "Usuarios", new { id = item.idUsuario }, new { @class = "btn btn-secondary" }) |
                        <button class="delUser btn btn-danger" data-id="@item.idUsuario">Eliminar</button>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
<div class="modal fade" id="delModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Eliminar Usuario</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h2>Esta seguro que quiere eliminar el Usuario # <span class="text-danger" id="dlSpan"></span></h2>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-Danger" id="delBtn">Eliminar</button>
            </div>
        </div>
    </div>
</div>
