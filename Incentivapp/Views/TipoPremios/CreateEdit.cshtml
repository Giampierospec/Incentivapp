@{ 
    string method = ViewBag.Method;
}
@model Incentivapp.Models.TipoPremio
<div class="row text-center">
    <div class="col-sm-8 offset-sm-2">
        <h2>@ViewBag.Msg</h2>
        <hr />
        @Html.ValidationSummary()
        @using (Html.BeginForm(method, "TipoPremios", FormMethod.Post))
        {
            if(Model != null)
            {
                @Html.HiddenFor(x => x.idTipoPremio);
            }
            <div class="form-group row">
                @Html.LabelFor(x => x.tipo,"Tipo de Premio",new { @class= "col-sm-4 col-form-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(x => x.tipo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.tipo)
                </div>
            </div>
            <div class="col-sm-8 offset-sm-2">
                <button type="submit"class="btn btn-outline-primary">@ViewBag.Btn</button>
            </div>
        }
    </div>
</div>



